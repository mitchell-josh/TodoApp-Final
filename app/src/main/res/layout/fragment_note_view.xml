<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textnote_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/textnote_title_hint"/>

    <TextView
        android:id="@+id/textnote_dateMMMd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnote_title"
        android:layout_alignParentLeft="true"
        android:hint="Date MMMd"
        />
    
    <TextView
        android:id="@+id/textnote_date_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnote_title"
        android:layout_toRightOf="@id/textnote_dateMMMd"
        android:layout_alignParentRight="true"
        android:hint="Date Detail"/>


    <TextView
        android:id="@+id/textnote_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textnote_dateMMMd"
        android:gravity="top"
        android:hint="Enter content for the text note"
        android:inputType="textMultiLine" />

</RelativeLayout>